// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
    output   = "./client"
}

datasource db {
    provider = "postgresql"
    url      = env("APP_DATABASE_URL")
}

model Admin {
    id       String  @id @default(uuid())
    username String
    password String
    active   Boolean @default(false)
    refresh  String  @default("")
}

model Project {
    id                    String   @id @default(uuid())
    name                  String
    description           String
    developerRequirements String
    dateStart             DateTime
    dateEnd               DateTime
    enrollmentStart       DateTime
    enrollmentEnd         DateTime
    supervisor            String
    isPublic              Boolean
}
