generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Metric {
  id        String           @id
  name      String
  instances ResourceMetric[]
}

model Platform {
  id        String     @id
  name      String
  resources Resource[]
}

model Project {
  id        String     @id
  name      String
  resources Resource[]
}

model Resource {
  id         String           @id
  name       String
  platform   Platform         @relation(fields: [platformId], references: [id])
  project    Project          @relation(fields: [projectId], references: [id])
  data       String[]
  platformId String
  projectId  String
  metrics    ResourceMetric[]
}

model ResourceMetric {
  id         String   @id
  metric     Metric   @relation(fields: [metricId], references: [id])
  resource   Resource @relation(fields: [resourceId], references: [id])
  metricId   String
  resourceId String
  updateRate String
  updatedAt  String
  data       String[]
}
